<?xml version="1.0"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

    {# @var url \BaksDev\Products\Product\Repository\AllProductsByCategory\AllProductsByCategoryResult #}

    {# Продукция #}
    {% for url in urls %}

        <url>
            <loc>
                {{ absolute_url(path('products-product:public.detail', {
                    category: url.categoryUrl,
                    url: url.productUrl,
                    offer: url.offerValue,
                    variation: url.variationValue,
                    modification: url.modificationValue,
                    postfix:  (url.modificationPostfix ?: url.variationPostfix ?: url.offerPostfix ?: null )|replace({ '/': '-' })
                } )) }}
            </loc>
            <lastmod>{{ url.modify|date('Y-m-d\\TH:i:sP') }}</lastmod>
        </url>
    {% endfor %}
</urlset>
