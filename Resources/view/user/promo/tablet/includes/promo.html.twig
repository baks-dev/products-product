<div class="bg-secondary">
    <section class="container  py-4">
        <div class="d-flex justify-content-between  align-items-center">
            <div class="d-flex  align-items-center gap-2">
                <svg class="bi bi-lightning-charge-fill d-block" xmlns="http://www.w3.org/2000/svg" width="16"
                     height="16" fill="currentColor" viewbox="0 0 16 16">
                    <path d="M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09z"></path>
                </svg>
                <h2 class="fs-18 text-uppercase fw-bold mb-0">
                    спецпредложения
                </h2>

            </div>
        </div>


        {{ include(_self|replace({ "promo.html.twig" : "breadcrumb.html.twig" })) }}

        <div class="d-flex align-items-center justify-content-between  mb-4 pt-4">
            <h2 class="fs-18 text-uppercase fw-bold mb-0">
                Каталог
            </h2>

            <div class="d-flex align-items-center justify-content-between gap-5">

                <ul class="nav nav-pills  fs-14" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active text-secondary px-2" id="pills-hit-tab"
                                data-bs-target="#pills-hit" data-bs-toggle="pill" aria-controls="pills-hit"
                                aria-selected="true" type="button" role="tab">Хит
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link text-secondary px-2" id="pills-advise-tab"
                                data-bs-target="#pills-advise" data-bs-toggle="pill" aria-controls="pills-advise"
                                aria-selected="false" type="button" role="tab">Советуем
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link text-secondary px-2" id="pills-new-tab" data-bs-target="#pills-new"
                                data-bs-toggle="pill" aria-controls="pills-new" aria-selected="false" type="button"
                                role="tab">Новинка
                        </button>
                    </li>
                </ul>
                <a class="text-secondary text-uppercase" href="{{ path('products-product:user.catalog.index') }}">
                    Весь каталог
                </a>
            </div>
        </div>

        <div class="tab-content mb-3" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-hit" aria-labelledby="pills-hit-tab" role="tabpanel"
                 tabindex="0">
                <div class="row row-cols-4 gy-3 gx-2">

                    {% for product in promoProducts %}
                        {{ include(_self|replace({ "promo.html.twig" : "card-sm.html.twig" })) }}
                    {% endfor %}

                </div>
            </div>
            <div class="tab-pane fade" id="pills-advise" aria-labelledby="pills-advise-tab" role="tabpanel"
                 tabindex="0">
                <div class="row row-cols-4 gy-3 gx-2">

                    Пусто


                </div>
            </div>

            <div class="tab-pane fade" id="pills-new" aria-labelledby="pills-new-tab" role="tabpanel" tabindex="0">
                <div class="row row-cols-4  gy-3 gx-2">

                    Пусто


                </div>
            </div>

        </div>

        <div class="text-center">
            <a class="btn btn-primary fs-14 rounded-5 shadow px-5 py-2 fw-medium"
               href="{{ path('products-product:user.catalog.index') }}">
                <span class="px-4">Все товары</span>
            </a>
        </div>

    </section>
</div>
