{# ID множественного варианта торгового предложения категории  #}
{{ form_widget(modification.categoryModification) }}
{{ form_widget(modification.const) }}


{# Фото вариантов торгового предложения #}
{% if modification.image is defined %}
    {{ include(_self|replace({ "_modification.html.twig": "_collection.html.twig" })) }}
{% endif %}


<div class='d-flex justify-content-between align-items-end gap-3'>


    {{ form_row(modification.DeleteModification, {
        label: '<span class="svg-icon svg-icon-2">
						<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 25 25" fill="none">
							<rect opacity="0.5" x="7.05025" y="15.5356" width="12" height="2" rx="1" transform="rotate(-45 7.05025 15.5356)" fill="currentColor"></rect>
							<rect x="8.46447" y="7.05029" width="12" height="2" rx="1" transform="rotate(45 8.46447 7.05029)" fill="currentColor"></rect>
						</svg>
					</span>',
        attr: {
            class: 'btn-outline-danger btn-sm border-0 del-item-modification',
            'data-index': 'item_'~modification.vars.id
        }
    }) }}


    <div class='w-100'>

        {{ form_row(modification.value,
            modification.value.vars.data and loop.first ? { label : modification.value.vars.label } : { label : false, attr:  { placeholder : modification.value.vars.label } }
        ) }}
    </div>


    {% if modification.postfix is defined %}
        <div class='w-50'>
            {{ form_row(modification.postfix,
                modification.postfix.vars.data and loop.first ? { label : modification.postfix.vars.attr.placeholder } : { label : false }
            ) }}
        </div>
    {% endif %}

    {% if modification.article is defined %}


        <div class='w-100 d-flex align-items-end'>

            <div class="mb-3">
                {# Генератор артикула #}
                <button type="button" class="btn btn-sm btn-link ps-0 article-generate" title="Генерировать артикул"

                        data-id="{{ modification.article.vars.id }}"

                        data-offer="{{ offer.value.vars.id }}"
                        data-offerpostfix="{{ offer.postfix is defined ? offer.postfix.vars.id }}"


                        data-variation="{{ variation.value.vars.id }}"
                        data-variationpostfix="{{ variation.postfix is defined ? variation.postfix.vars.id }}"

                        data-modification="{{ modification.value.vars.id }}"
                        data-modificationpostfix="{{ modification.postfix is defined ? modification.postfix.vars.id }}"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                         class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z"/>
                        <path fill-rule="evenodd"
                              d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/>
                    </svg>
                </button>
            </div>

            <div class="w-100">
                {{ form_row(modification.article,
                    modification.article.vars.data and loop.first ? { label : 'Артикул' } : { label : false, attr : { placeholder : 'Артикул' }}
                ) }}
            </div>

        </div>


    {% endif %}



    {# Скрытые элементы #}

    <div class="accordion accordion-flush mb-3" id="accordion{{ modification.cost.cost.vars.id }}">
        <h2 class="accordion-header">
            <button class="btn collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#flush-{{ modification.cost.cost.vars.id }}" aria-expanded="false"
                    aria-controls="flush-{{ modification.cost.cost.vars.id }}">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list"
                     viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"/>
                </svg>
            </button>
        </h2>
    </div>

</div>


{# Скрытые элементы #}

<div class="accordion-item">
    <div id="flush-{{ modification.cost.cost.vars.id }}" class="accordion-collapse collapse "
         data-bs-parent="#accordion{{ modification.cost.cost.vars.id }}">
        <div class="d-flex justify-content-between align-items-end gap-3">


            {% if modification.cost is defined %}

                <div class="mb-3 w-50">

                    {% if modification.cost.cost.vars.data %}
                        {{ form_label(modification.cost.cost, 'Себестоимость продукта') }}
                    {% endif %}

                    <div class="input-group">

						<span class="input-group-text"
                              id="basic-addon3"
                        >
							<svg xmlns="http://www.w3.org/2000/svg"
                                 width="16"
                                 height="16"
                                 fill="currentColor"
                                 class="bi bi-currency-exchange"
                                 viewBox="0 0 16 16"
                            >
								<path d="M0 5a5.002 5.002 0 0 0 4.027 4.905 6.46 6.46 0 0 1 .544-2.073C3.695 7.536 3.132 6.864 3 5.91h-.5v-.426h.466V5.05c0-.046 0-.093.004-.135H2.5v-.427h.511C3.236 3.24 4.213 2.5 5.681 2.5c.316 0 .59.031.819.085v.733a3.46 3.46 0 0 0-.815-.082c-.919 0-1.538.466-1.734 1.252h1.917v.427h-1.98c-.003.046-.003.097-.003.147v.422h1.983v.427H3.93c.118.602.468 1.03 1.005 1.229a6.5 6.5 0 0 1 4.97-3.113A5.002 5.002 0 0 0 0 5zm16 5.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0zm-7.75 1.322c.069.835.746 1.485 1.964 1.562V14h.54v-.62c1.259-.086 1.996-.74 1.996-1.69 0-.865-.563-1.31-1.57-1.54l-.426-.1V8.374c.54.06.884.347.966.745h.948c-.07-.804-.779-1.433-1.914-1.502V7h-.54v.629c-1.076.103-1.808.732-1.808 1.622 0 .787.544 1.288 1.45 1.493l.358.085v1.78c-.554-.08-.92-.376-1.003-.787H8.25zm1.96-1.895c-.532-.12-.82-.364-.82-.732 0-.41.311-.719.824-.809v1.54h-.005zm.622 1.044c.645.145.943.38.943.796 0 .474-.37.8-1.02.86v-1.674l.077.018z"/>
							</svg>
						</span>

                        {{ form_widget(modification.cost.cost, { attr: { 'placeholder' : 'Себестоимость' } }) }}

                    </div>
                </div>

                <div class="w-50">{{ form_row(modification.cost.currency) }}</div>

            {% endif %}


            {% if modification.price is defined %}

                <div class="mb-3 w-50">

                    {% if modification.price.price.vars.data %}
                        {{ form_label(modification.price.price, 'Стоимость продажи') }}
                    {% endif %}

                    <div class="input-group">

						<span class="input-group-text"
                              id="basic-addon3"
                        >
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                 class="bi bi-cash-coin" viewBox="0 0 16 16">
                              <path fill-rule="evenodd"
                                    d="M11 15a4 4 0 1 0 0-8 4 4 0 0 0 0 8m5-4a5 5 0 1 1-10 0 5 5 0 0 1 10 0"/>
                              <path d="M9.438 11.944c.047.596.518 1.06 1.363 1.116v.44h.375v-.443c.875-.061 1.386-.529 1.386-1.207 0-.618-.39-.936-1.09-1.1l-.296-.07v-1.2c.376.043.614.248.671.532h.658c-.047-.575-.54-1.024-1.329-1.073V8.5h-.375v.45c-.747.073-1.255.522-1.255 1.158 0 .562.378.92 1.007 1.066l.248.061v1.272c-.384-.058-.639-.27-.696-.563h-.668zm1.36-1.354c-.369-.085-.569-.26-.569-.522 0-.294.216-.514.572-.578v1.1zm.432.746c.449.104.655.272.655.569 0 .339-.257.571-.709.614v-1.195z"/>
                              <path d="M1 0a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h4.083q.088-.517.258-1H3a2 2 0 0 0-2-2V3a2 2 0 0 0 2-2h10a2 2 0 0 0 2 2v3.528c.38.34.717.728 1 1.154V1a1 1 0 0 0-1-1z"/>
                              <path d="M9.998 5.083 10 5a2 2 0 1 0-3.132 1.65 6 6 0 0 1 3.13-1.567"/>
                            </svg>
						</span>

                        {{ form_widget(modification.price.price, {

                            attr: { 'placeholder' : 'Стоимость' }
                        }) }}

                    </div>
                </div>

                <div class="w-50">{{ form_row(modification.price.currency) }}</div>

            {% endif %}


        </div>
    </div>
</div>


