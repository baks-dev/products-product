{{ form_row(form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.categoryModification, { attr: { value : form.dataModification.vars.value } }) }}


{% set modification_first = ((form.offer.children|first).variation.children|first).modification.children|first %}

{# Фото вариантов торгового предложения #}
		{% if modification_first.image is defined %}
            {{ prototype_modification_collection }}
        {% endif %}

<div class='d-flex justify-content-between align-items-end gap-3'>

    {# Кнопка удаления элемента #}
    {{ form_row(form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.DeleteModification,{
        label: '<span class="svg-icon svg-icon-2">
						<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 25 25" fill="none">
							<rect opacity="0.5" x="7.05025" y="15.5356" width="12" height="2" rx="1" transform="rotate(-45 7.05025 15.5356)" fill="currentColor"></rect>
							<rect x="8.46447" y="7.05029" width="12" height="2" rx="1" transform="rotate(45 8.46447 7.05029)" fill="currentColor"></rect>
						</svg>
					</span>',
        attr: {
            class: 'btn-outline-danger btn-sm border-0 del-item-modification',
            'data-index': 'item_'~form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.vars.id

        }

    }) }}

    {# Значение modification #}
    <div class='w-25'>
        {{ form_widget(form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.value) }}
    </div>

    {# Постфикс #}
    {% if modification_first.postfix is defined %}
        <div class='w-50'>
            {{ form_row(form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.postfix,
                { label : false, attr : { placeholder :  modification_first.postfix.vars.attr.placeholder }
                }) }}
        </div>
    {% endif %}

    {# Артикул #}
    {% if modification_first.article is defined %}
        <div class='w-100 d-flex align-items-end'>

            <div class="mb-3">
                {# Генератор артикула #}
                <button type="button" class="btn btn-sm btn-link ps-0 article-generate" title="Генерировать артикул"

                        data-id="{{ form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.article.vars.id }}"
                        data-offer="{{ form.offer.vars.prototype.value.vars.id }}"
                        data-offerpostfix="{{ form.offer.vars.prototype.postfix.vars.id }}"

                        data-variation="{{ form.offer.vars.prototype.variation.vars.prototype.value.vars.id }}"
                        data-variationpostfix="{{ form.offer.vars.prototype.variation.vars.prototype.postfix.vars.id }}"

                        data-modification="{{ form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.value.vars.id }}"
                        data-modificationpostfix="{{ form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.postfix.vars.id }}"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                         class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z"/>
                        <path fill-rule="evenodd"
                              d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/>
                    </svg>
                </button>
            </div>

            {{ form_row(form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.article,
                { label : false, attr : { placeholder : 'Артикул' }}) }}

        </div>
    {% endif %}

    {# Штрихкод #}
    {% if modification_first.barcode is defined %}

        <div class='w-50'>
            {{ form_row(form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.barcode,
                { label : false, attr:  { placeholder : 'Штрихкод' } }
            ) }}
        </div>

    {% endif %}

    {# Скрытые элементы #}
    <div class="accordion accordion-flush mb-3"
         id="accordion{{ form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.cost.cost.vars.id }}">
        <h2 class="accordion-header">
            <button class="btn collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#flush-{{ form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.cost.cost.vars.id }}"
                    aria-expanded="false"
                    aria-controls="flush-{{ form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.cost.cost.vars.id }}">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list"
                     viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"/>
                </svg>
            </button>
        </h2>
    </div>

</div>

{# Скрытые элементы #}
<div class="accordion-item">
    <div id="flush-{{ form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.cost.cost.vars.id }}"
         class="accordion-collapse collapse "
         data-bs-parent="#accordion{{ form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.cost.cost.vars.id }}">
        <div class="d-flex justify-content-between align-items-end gap-3">

            {# Себестоимость продукта #}
            {% if modification_first.cost is defined %}

                <div class="mb-3 w-50">

                    {{ form_label(form.offer.vars.prototype.variation.vars.prototype.modification.vars.prototype.cost.cost, 'Себестоимость продукта') }}

                    <div class="input-group">

        			<span class="input-group-text"
                          id="basic-addon3">

        				<svg xmlns="http://www.w3.org/2000/svg"
                             width="16"
                             height="16"
                             fill="currentColor"
                             class="bi bi-currency-exchange"
                             viewBox="0 0 16 16">
