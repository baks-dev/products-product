{% trans_default_domain 'admin.products.product' %}

<div class="d-flex justify-content-around pb-3 radio-buttons " data-buttons="true">
	<label class="btn p-3 border-dashed rounded-3 w-100 {{ form.price.request.vars.data ? 'active' }}">
		<div class="form-check d-flex h3 align-items-center">
			{{ form_widget(form.price.request, { label: false }) }}
			<div class='d-flex flex-column' style='font-size: 1.2rem;'>
				<div class='w-100 text-start'>
					{# Цена по запросу #}
					{{ 'Цена по запросу'|trans }}
				</div>
				<div class="text-muted small">
					<small>Цена по запросу имеет приоритет над базовой стоимостью</small>
				</div>
			</div>
		</div>
	</label>
</div>


{{ form_row(form.info.article, { label : 'Артикул товара' } ) }}

	{# СТОИМОСТЬ #}
<div class="d-flex justify-content-between gap-3">
	<div class="input-group mb-3">
