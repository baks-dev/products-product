		{{ form_widget(form.price.price, { attr: { 'placeholder' : 'Стоимость' } }) }}
	
	</div>
	
	<div class="w-50">
		{{ form_row(form.price.currency) }}
	</div>
</div>


<div class="d-flex gap-3 align-items-end">
	{{ form_row(form.price.quantity, form.price.quantity.vars.data ? { label : 'Наличие' } : { label : false, attr : { placeholder : 'Наличие' }} ) }}
	
	<div class="w-50">
		{{ form_row(form.price.measurement) }}
	</div>
	<div class="w-100">
		{{ form_row(form.price.reserve, form.price.reserve.vars.data ? { label : 'Резерв' } : { label : false, attr : { placeholder : 'Резерв' }} ) }}
	</div>
</div>


