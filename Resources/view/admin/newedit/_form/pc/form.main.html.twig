{% trans_default_domain 'admin.products.product' %}

<div class="d-flex gap-2">

    <div class="d-flex flex-column gap-2 w-50">
        {# Настройки локали #}

        <div class="card w-100 border-light">
            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        Категории
                    </h4>
                </div>
            </div>

            <div class="card-body pb-0">
                {# КАТЕГОРИИ #}
                {{ include(_self|replace({ "form.main.html.twig": "includes/main/_category.html.twig" })) }}
            </div>
        </div>


        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        {# Статус активности #}
                        Торговый каталог
                    </h4>
                </div>
            </div>

            <div class="card-body pb-0">
                {# Торговый каталог #}
                {{ include(_self|replace({ "form.main.html.twig": "includes/main/_price.html.twig" })) }}
            </div>
        </div>


        {% if (form.material|first).material is defined %}
            <div class="card w-100 border-light">
                <div class="card-header border-light bg-body">
                    <div class="card-title">
                        <h4>
                            Производственное сырьё
                        </h4>
                    </div>
                </div>

                <div class="card-body pb-0">
                    {# КАТЕГОРИИ #}
                    {{ include(_self|replace({ "form.main.html.twig": "includes/main/_material.html.twig" })) }}
                </div>
            </div>
        {% endif %}



    </div>

    <div class="d-flex flex-column gap-2 w-50 ">


        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        {# Секции профиля #}
                        Основные настройки продукта
                    </h4>
                </div>
            </div>

            <div class="card-body pb-0">
                {# Профиль пользователя #}
                {% if is_granted('ROLE_ADMIN') %}
                    {{ form_row(form.info.profile, { label : 'Прикрепить к профилю пользователя'|trans, placeholder : 'Выберите профиль из списка...'  } ) }}
                {% endif %}

                {# Активность #}
                {{ include(_self|replace({ "form.main.html.twig": "includes/main/_active.html.twig" })) }}
            </div>

        </div>

        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        Настройки локали
                    </h4>
                </div>
            </div>

            <div class="card-body pb-0">
                {# НАСТРОЙКИ ЛОКАЛИ #}
                {{ include(_self|replace({ "form.main.html.twig": "includes/main/_trans.html.twig" })) }}
            </div>
        </div>

        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        Настройки SEO
                    </h4>
                </div>
            </div>

            <div class="card-body pb-0">
                {# SEO #}
                {{ include(_self|replace({ "form.main.html.twig": "includes/main/_seo.html.twig" })) }}
            </div>
        </div>


    </div>

</div>


