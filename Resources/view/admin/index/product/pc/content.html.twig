            {# @var result BaksDev\Materials\Catalog\BaksDevMaterialsCatalogBundle #}

            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_PRODUCT_NEW') %}
                <a href="{{ path('products-product:admin.newedit.new') }}" class="btn btn-primary"
                   title="Добавить продукт">
                    {{ 'btn.new'|trans({}, 'core.btn') }}
                </a>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_PRODUCT_COST') %}

                <button
                        data-href="{{ path('products-product:admin.cost') }}"
                        class="btn btn-outline-success d-flex gap-2 align-items-center text-nowrap modal-link disabled"
                        data-bs-toggle="modal"
                        data-bs-target="#modal"
                        title="Обновить себестоимость продукции"
                        type="button"

                >

                    {{ 'btn.cost'|trans }}

