<div class="modal-dialog modal-dialog-centered " style="max-width: 800px;">

    <div class="modal-content p-3 border-bottom border-5 border-primary">

        <div class="modal-header">
            <h5 class="modal-title">
                {{ 'QR продукции'|trans }}
            </h5>
        </div>

        <div class="modal-body">

            <div class="printer">
                <img src='{{ qrcode }}' alt='QR Code' width='300' height='300'>
                <div class="w-100 fw-bolder"> {{ item.product_name }}</div>
                <div class="w-100">{{ item.product_article }}</div>

                {% if item.product_offer_value %}
                <div class="w-100"><small class="text-muted">{{ item.product_offer_name }}: </small>
                <span class="fw-bolder">{{ item.product_offer_value|call_twig_func(item.product_offer_reference) }}
                    {{ item.product_offer_postfix }}
                </span>
                </div>
                {% endif %}

                {% if item.product_variation_value %}
                    <div class="w-100">
                        <small class="text-muted">{{ item.product_variation_name }}: </small>
                        <span class="fw-bolder">
                            {{ item.product_variation_value|call_twig_func(item.product_variation_reference) }}
                        {{ item.product_variation_postfix }}
                            </span>
                    </div>
                {% endif %}

                {% if item.product_modification_value %}
                    <small class="text-muted">{{ item.product_modification_name }}: </small>
                    <span class="fw-bolder">
                        {{ item.product_modification_value|call_twig_func(item.product_modification_reference) }}
                        {{ item.product_modification_postfix }}
                    </span>
                {% endif %}

            </div>

            <div class="page-break" style="page-break-before:always; position: absolute;">&nbsp;</div>


            {# <div class="page-break" style="page-break-before:always; position: absolute;">&nbsp;</div>
            <img class="printer page-break" src='{{ qrcode }}' alt='QR Code' width='300' height='300'>
