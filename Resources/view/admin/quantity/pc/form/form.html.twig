{% trans_default_domain 'products-product.admin' %}

<div class="modal-dialog modal-dialog-centered " style="max-width: 800px;">
    {{ form_start(form) }}
    <div class="modal-content p-3 border-bottom border-5 border-primary">
        <div class="modal-header">
            <h5 class="modal-title">
                {{ 'Изменить количество товаров'|trans }}
            </h5>
        </div>

        <div class="modal-body">
            <div class="d-flex gap-3 align-items-center">
                <div class="w-100">
                    {{ form_row(form.category, { placeholder: 'Все категории ...', attr: { 'data-select' : 'select2', class: 'mb-0' } }) }}
                </div>
                <div class="w-100">
                    {{ form_row(form.quantity) }}
                </div>
            </div>

            <div class="d-flex gap-3 align-items-center">
                <div class="w-100">
                    {{ form_row(form.offer, { placeholder: 'Все торговые предложения ...', attr: { 'data-select' : 'select2', class: 'mb-0' } }) }}
                </div>
                <div class="w-100">
                    {{ form_row(form.variation, { placeholder: 'Все вариации ...', attr: { 'data-select' : 'select2', class: 'mb-0' } }) }}
                </div>
                <div class="w-100">
                    {{ form_row(form.modification, { placeholder: 'Все модификации ...', attr: { 'data-select' : 'select2', class: 'mb-0' } }) }}
                </div>

            </div>

        </div>

        <div class="modal-footer">
            <div class="mt-3 gap-3 d-flex">
                {# Отмена #}
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    {{ 'btn.cancel'|trans({}, 'core.btn') }}
                </button>
                {{ form_widget(form.submit, { label: '
                    <span>'~ 'btn.save'|trans({}, 'core.btn') ~'</span>
                    <span class="spinner-border spinner-border-sm vertical-middle d-none"></span>
			    '}) }}
            </div>
        </div>

    </div>
    {{ form_end(form) }}
</div>
